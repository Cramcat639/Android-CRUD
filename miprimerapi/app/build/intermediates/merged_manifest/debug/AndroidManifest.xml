        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cramcat.platform.CRUDapp.Admin"
            android:configChanges="orientation|screenSize"
            android:exported="false"
